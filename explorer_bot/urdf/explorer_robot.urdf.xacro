<?xml version="1.0"?>
<robot name="explorer_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1" />
    </material>

    <link name="base_footprint" />

    <link name="base_link">
        <visual>
            <geometry>
               <cylinder radius="0.2" length="0.14"/>
            </geometry>
            <origin xyz="0 0 0.07" rpy="0 0 0" />
            <material name="black" />
        </visual>
    </link>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0.15 0 0" rpy="${pi / 2.0} 0 0" />
            <material name="grey" />
        </visual>
    </link>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0.15 0 0" rpy="${pi / 2.0} 0 0" />
            <material name="grey" />
        </visual>
    </link>

    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.06" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="grey" />
        </visual>
    </link>

    <link name="turret_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.2"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <material name="white"/>
        </visual>
    </link>

    <link name="turret_bottom_link">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.05"/> 
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/> 
            <material name="black"/>
        </visual>
    </link>

    <link name="turret_top_link">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.05"/> 
            </geometry>
            <origin xyz="0 0 0.05" rpy="0 0 0"/> 
            <material name="black"/>
        </visual>
    </link>

    <joint name="base_joint" type="fixed">  
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.1" rpy="0 0 0" />
    </joint> 

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="-0.15 -0.225 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_link" />
        <origin xyz="-0.15 0.225 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="base_caster_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="caster_wheel_link" />
        <origin xyz="0.1 0 -0.05" rpy="0 0 0" />
    </joint>

    <joint name="base_turret_joint" type="fixed">
        <parent link="base_link"/>
        <child link="turret_link"/>
        <origin xyz="0 0 0.14" rpy="0 0 0"/>
    </joint>

    <joint name="turret_bottom_joint" type="fixed">
        <parent link="turret_link"/>
        <child link="turret_bottom_link"/>
        <origin xyz="0 0 -0.075" rpy="0 0 0"/>
    </joint>


    <joint name="turret_top_joint" type="fixed">
        <parent link="turret_link"/>
        <child link="turret_top_link"/>
        <origin xyz="0 0 0.175" rpy="0 0 0"/>
    </joint>


</robot>
